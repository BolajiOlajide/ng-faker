{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./lib",
      "lib": ["es2020", "dom"],
      "moduleResolution": "node"
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules", "dist", "__tests__", "src/examples/**/*"]
  }
