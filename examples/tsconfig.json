{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node"
  },
  "include": ["main.mjs"],
  "exclude": ["node_modules"]
}
